{% extends 'base.html.twig' %}

{% block title %}
  Starshop: Beam up some parts!
{% endblock %}

{% block body %}
  <h1>Starshop: your monopoly-busting option for Starship parts!</h1>

  <h2>Your ship is:</h2>
  <a href="{{ path('app_starship_show', { id: myShip.id }) }}"><p>{{ myShip.name }}</p></a>
  <p>{{ myShip.model }}</p>
  <p>{{ myShip.captain }}</p>
  <br />
  <hr />
  <br />
  <h2>We have {{ ships|length }} starships</h2>
{% endblock %}
